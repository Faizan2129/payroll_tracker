doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css', integrity='sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==', crossorigin='anonymous', referrerpolicy='no-referrer')
    style.
      body {
          margin: 0;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          background-color: #f8f9fa;
          color: #212529;
      }

      .navbar {
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          background-color: #5a9bf6;
          padding: 15px 20px;
          z-index: 1000;
          display: flex;
          justify-content: space-between;
          align-items: center;
      }

      .navbar a {
          color: #ffffff;
          text-decoration: none;
          font-size: 16px;
          padding: 8px 12px;
          border-radius: 3px;
      }

      .navbar a.logo {
          font-size: 22px;
          font-weight: bold;
          display: flex;
          align-items: center;
      }

      .navbar a.logo img {
          height: 35px;
          margin-right: 10px;
          border-radius: 50%;
      }

      .navbar a:hover {
          background-color: #3178c6;
          color: #ffffff;
      }

      .navbar a.active {
          background-color: #254f8f;
      }

      .navbar-menu {
          display: flex;
          gap: 15px;
      }

      h1 {
          color: #343a40;
          margin-top: 100px;
      }

      table {
          width: 100%;
          border-collapse: collapse;
          margin-top: 20px;
      }

      th,
      td {
          border: 1px solid #dee2e6;
          padding: 10px;
          text-align: left;
      }

      th {
          background-color: #e9ecef;
      }

      tr:hover {
          background-color: #f1f3f5;
      }

      .search-bar {
          margin: 30px 0;
          text-align: center;
      }

      #searchInput,
      select {
          padding: 8px;
          border: 1px solid #ced4da;
          border-radius: 4px;
          margin-right: 5px;
      }

      button {
          padding: 8px 15px;
          background-color: #198754;
          color: #ffffff;
          border: 1px solid #ced4da;
          border-radius: 4px;
          cursor: pointer;
      }

      button:hover {
          background-color: #157347;
      }

      @media screen and (max-width: 500px) {
          body {
              padding-top: 100px;
          }

          .navbar-menu {
              flex-direction: column;
              align-items: flex-start;
              gap: 10px;
          }

          .search-bar {
              text-align: left;
          }

          #searchInput {
              width: 80%;
          }

          button {
              width: 100%;
          }
      }
  body
    .navbar
      a(href='#', class='logo')
        img(src='./logo.jpg', alt='Logo')
        span Payroll Manager
      .navbar-menu
        a(href='/home', class=currentPage === 'home' ? 'active' : '') Home
        if loggedIn
          a(href='/tasks', class=currentPage === 'tasks' ? 'active' : '') Tasks
          a(href='/settings', class=currentPage === 'settings' ? 'active' : '') Settings
          a(href='/logout') Logout
        else
          a(href='/login', class=currentPage === 'login' ? 'active' : '') Login
